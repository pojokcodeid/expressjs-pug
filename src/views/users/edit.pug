extends ../layout

block content
  h1 Edit User
  form(action=`/users/${user.id}/edit` method='post')
    label(for='name') Name:
    input(type='text' name='name' id='name' value=`${user.name}`)
    br
    label(for='email') Email:
    input(type='email' name='email' id='email' value=`${user.email}`)
    br
    button(type='submit') Update
